@using Magic.Helpers

<style>
    #file-uploader {
         position: absolute;
         border: 2px dashed #000000;
         display: none;
         left: 50%;
         margin-left: -25%;
         width: 50%;
         min-width: 100px;
         max-width: 500px;
         height: auto;
         background-color: #ffffff;
         z-index: 100;
         text-align: center;
         padding: 10px;
     }

    #file-uploader input {
        margin: 6px 0 6px 0;
    }

    #file-uploader-overlay {
        position: fixed;
        z-index: 99;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background-color: #000000;
        overflow: hidden;
        -moz-filter: alpha(opacity=10);
        -o-filter: alpha(opacity=10);
        -webkit-filter: alpha(opacity=10);
        -ms-opacity: 0.1;
        filter: alpha(opacity=10);
        opacity: 0.1;
        display: none;
    }

    #file-uploader-selected-file-overlay {
        width: 100%;
        max-width: 100%;
        text-overflow: ellipsis;
    }

    .hover {
        background-color: #fbfbfb !important;
    }

    #file-uploader-progress {
        background-color: black;
        border-radius: 13px; /* (height of inner div) / 2 + padding */
        padding: 3px;
    }

    #file-uploader-progress-bar {
        background-color: orange;
        width: 0; /* Adjust with JavaScript */
        height: 20px;
        border-radius: 10px;
    }
    #file-uploader-close-btn,
    #file-uploader-min-btn {
        cursor: pointer;
        position: relative;
        float: right;
        right: -10px;
        top: -10px;
        padding: 2px 8px;
        border: 1px solid #cccccc;
        line-height: 20px;
        border-bottom-left-radius: 4px;
        /* border-bottom-right-radius: 4px; */
        border-top: 0;
        border-right: 0;
        
</style>

<div id="file-uploader-progress">
    <div id="file-uploader-progress-bar"></div>
</div>

<div id="file-uploader-overlay" class="overlay"></div>

<div id="file-uploader" class="upload dialog">

    @*<span id="file-uploader-close-btn">x</span>
    <span id="file-uploader-min-btn">_</span>*@

    <input type="text" id="file-uploader-selected-file-overlay" value="Select or drag and drop file" class="btn" readonly/>
    <input type="file" id="file-uploader-selected-file" class="hidden" />

    <input type="hidden" id="file-property-id" value="" />
    <input type="button" id="file-uploader-cancel-btn" value="Cancel" class="btn btn-inverse" />

</div>

<script>
    var uploadPath = '@ViewData["uploadPath"]';
    var placeholderImage = '@Html.GetPlaceholder()';
</script>

@Scripts.Render("~/Scripts/_file-uploader.js")