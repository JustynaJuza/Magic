<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | justyna.co.uk</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("//cdn.datatables.net/1.10.0/css/jquery.dataTables.css")
    @Styles.Render("//cdn.datatables.net/fixedheader/2.1.1/css/dataTables.fixedHeader.css")
    @Styles.Render("//cdn.datatables.net/fixedcolumns/3.0.1/css/dataTables.fixedColumns.css")
    @Styles.Render("//cdn.datatables.net/tabletools/2.2.1/css/dataTables.tableTools.css")

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("//code.jquery.com/jquery-1.10.2.min.js")
    @Scripts.Render("//cdn.datatables.net/1.10.0/js/jquery.dataTables.js")
    @Scripts.Render("//cdn.datatables.net/fixedheader/2.1.1/js/dataTables.fixedHeader.min.js")
    @Scripts.Render("//cdn.datatables.net/fixedcolumns/3.0.1/js/dataTables.fixedColumns.min.js")
    @Scripts.Render("//cdn.datatables.net/tabletools/2.2.1/js/dataTables.tableTools.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/underscore.js")

    @RenderSection("AdditionalScripts", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("CMS", "Index", "CMS")</li>
                    <li>@Html.ActionLink("Game Room", "Index", "GameRoom")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @{Html.RenderPartial("_LoginPartial");}
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h1>@ViewBag.Title</h1>
        @{Html.RenderPartial("_MessagePartial");}
        @RenderBody()
        <hr />
        <div class="row">
            <div class="col-md-10">
                @{Html.RenderPartial("_ChatPartial");}
            </div>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year Justyna</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

    @Scripts.Render("~/Scripts/_hub-start.js")
</body>
</html>
