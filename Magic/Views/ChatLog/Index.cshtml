@model IEnumerable<Magic.Models.ChatLog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Messages")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageLog.Count)
        </td>
        <td>
            @Html.ActionLink("View", "MessageLog", item) | |
            @Html.ActionLink("Delete", "Delete", item)
        </td>
    </tr>
}

</table>
