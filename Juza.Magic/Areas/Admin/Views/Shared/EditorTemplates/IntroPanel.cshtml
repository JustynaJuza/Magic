                @Html.DisplayFor(m => m.ButtonDescription)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.ButtonDescription, new { placeholder = "Button text" })
                <input type="button" class="confirm-edit btn btn-info" value="OK!" />
            </div>
            @Html.ValidationMessageFor(m => m.ButtonDescription)
        </div>
    </strong>
</div>


