@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", new { area = "" }, new { title = "Manage" })
        </li>
        @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <li>
                <input type="submit" value="Log off" class="navbar-link" />
            </li>
        }
    </ul>
}
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Log in", "Login", "Account", new { area = "" }, new { id = "loginLink" })</li>
</ul>
}